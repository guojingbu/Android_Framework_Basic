<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_5" />

    <TextView
        android:id="@+id/tv_key"
        style="@style/InfoTextStyle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon"
        android:paddingLeft="@dimen/dp_5" />

    <ImageView
        android:id="@+id/iv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:src="@drawable/list_icon_into" />

    <TextView
        android:id="@+id/tv_value"
        style="@style/InfoTextValueStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/tv_key"
        android:layout_toLeftOf="@id/iv_go"
        android:gravity="center_vertical|left" />

    <ImageView
        android:id="@+id/bottom_view"
        style="@style/HorDividerViewStyle"
        android:src="@drawable/drawable_divider_style"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

