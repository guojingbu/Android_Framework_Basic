<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--分割线的高度，横向的RecyclerView,这里设置宽度即可-->
    <size android:height="2px" android:width="1800px"/>
    <!--分割线的颜色-->
    <solid android:color="@color/gray" />
